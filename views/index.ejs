<!DOCTYPE html>
<html>
  <head>
    <title>Angband Live</title>
	<meta name="description" content="Web based client for playing Angband and select variants remotely. Supports recording and live spectating.">
	<link rel='stylesheet' href='/style.css' />
	<script src="term.js" ></script>
	<script src="/main.js"></script>
  </head>
  <body>
	<div id="container">
		<div id="terminal-container">
			<img id="logo" src="logo.png"></img>
			<% if (typeof(user) != 'undefined') { %>
				<% include playmenu %>
			<% } %>
			<% include watchmenu %>
		</div>
		<div id="menu">
		<div id="settings">
			<div id="userinfo">
				<% if (typeof(user) == 'undefined') { %>
					<% include login %>
				<% } else { %>
					<span>Logged in as <%= user.username%> <a href="/logout">Log Out</a></span>
				<% } %>
			</div>
		</div>
		<% if (typeof(user) != 'undefined') { %>
			<% if (user.username=='Gwarl') { %>
				<% include debug %>
			<% } %>
			<% include chatroom %>
		<% } %>
		</div>
	</div>
	<script>
	adjustsize({cols:150,rows:50});
	</script>
  </body>
</html>