#!/usr/bin/env node
var app = require('../app');
var pkg = require('../package.json');

app.set('port', process.env.C9_PORT || process.env.PORT || 3000);

var server = app.listen(app.get('port'), function() {
  console.log(pkg.name, 'is online at port ', server.address().port);
});


